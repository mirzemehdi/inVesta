<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



            <RelativeLayout
                android:id="@+id/mainAppBar"
                android:animateLayoutChanges="true"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:background="@color/colorPrimary"
                android:layout_height="64dp">

                <TextView
                    android:text="YATIR"
                    android:textColor="#fff"
                    android:textSize="28sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="24dp"
                    android:fontFamily="@font/tthoves_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>



                <ImageView
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_menu"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content">

                </ImageView>

            </RelativeLayout>



    <ScrollView
        android:layout_below="@id/mainAppBar"
        android:layout_width="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:layout_height="match_parent">





        <LinearLayout
            android:id="@+id/mainContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<!--            popularStartups-->
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"

                android:layout_marginBottom="12dp"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:textSize="18sp"
                    android:fontFamily="@font/tthoves_demibold"
                    android:textColor="@color/colorBlack"
                    android:text="Popular startups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:text="view all"
                    android:layout_alignParentEnd="true"

                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popularIdeasRecyclerView"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

            <!--            newStartups-->
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"

                android:layout_marginBottom="12dp"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:textSize="18sp"
                    android:fontFamily="@font/tthoves_demibold"
                    android:textColor="@color/colorBlack"
                    android:text="New startups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:text="view all"
                    android:layout_alignParentEnd="true"

                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/newIdeasRecyclerView"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>


            <!--            popular investors-->
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"

                android:layout_marginBottom="12dp"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:textSize="18sp"
                    android:fontFamily="@font/tthoves_demibold"
                    android:textColor="@color/colorBlack"
                    android:text="Popular investors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:text="view all"
                    android:layout_alignParentEnd="true"

                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/investorSRecyclerView"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

            <!--           advantages of F5-->
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"

                android:layout_marginBottom="12dp"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:textSize="18sp"
                    android:fontFamily="@font/tthoves_demibold"
                    android:textColor="@color/colorBlack"
                    android:text="Advantages of F5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>



            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/advantagesRecyclerView"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>



        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        app:menu="@menu/bottom_nav"
        android:layout_marginTop="16dp"
        android:id="@+id/bottomNavigation"
        android:animateLayoutChanges="true"
        android:background="#f8f8f8"
        app:itemTextColor="@color/bottom_nav_state"
        app:itemIconTint="@color/bottom_nav_state"
        android:alpha="0.82"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>