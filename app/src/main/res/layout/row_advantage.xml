<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginEnd="8dp"
    android:orientation="vertical"
    android:paddingStart="49dp"
    android:paddingEnd="49dp"
    android:paddingTop="32dp"
    android:background="@drawable/border"
    android:paddingBottom="16dp"
    android:gravity="center_horizontal"

    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="106dp"
        android:background="#e9edf6"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_height="106dp">


        <ImageView
            android:id="@+id/row_advantage_img"
            android:layout_width="wrap_content"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content">

        </ImageView>


    </LinearLayout>







    <TextView
        android:id="@+id/row_advantage_title"
        android:text="Easy to use"
        android:fontFamily="@font/tthoves_demibold"
        android:textSize="16dp"
        android:textColor="#262626"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:id="@+id/row_advantage_desc"
        android:text="Social proof"
        android:textSize="12sp"
        android:textColor="#909090"
        android:fontFamily="@font/tthoves_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

</LinearLayout>