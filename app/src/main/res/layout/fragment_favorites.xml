<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    tools:context=".Fragments.FavoritesFragment"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">





    <LinearLayout
        android:id="@+id/mainContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--            popularStartups-->
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"
            >

            <TextView
                android:textSize="18sp"
                android:fontFamily="@font/tthoves_demibold"
                android:textColor="@color/colorBlack"
                android:text="My Favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">



            <ImageView
                android:id="@+id/row_idea_img"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/nextsale"
                android:layout_height="192dp">

            </ImageView>

            <LinearLayout
                android:weightSum="10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <TextView
                android:id="@+id/row_idea_title"
                android:text="NextSale"
                android:layout_weight="8"
                android:fontFamily="@font/tthoves_demibold"
                android:textSize="16sp"
                android:textColor="#262626"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

                <TextView
                    android:text="23"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/tthoves_medium"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:layout_height="wrap_content">

                </TextView>
/
                <ImageView
                    android:layout_weight="1"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_like"
                    android:layout_width="0dp"
                    android:layout_height="15dp">

                </ImageView>
            </LinearLayout>

            <TextView
                android:id="@+id/row_idea_description"
                android:text="Social proof"
                android:layout_marginTop="4dp"
                android:textSize="14dp"
                android:textColor="#909090"
                android:fontFamily="@font/tthoves_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>





    </LinearLayout>

</ScrollView>

